---
import '@fontsource-variable/sora'
import '@fontsource-variable/inter-tight'
import { SEO } from 'astro-seo'

interface Props {
  title: string
}

const { title } = Astro.props

const seo = {
  title: 'Stanley Ang',
  description:
    'Experienced Software Engineer and Product Designer with 4+ years of building impactful apps using TypeScript and Node.js. Passionate about tech since age 8.',
  image: `${import.meta.env.SITE}/seo.jpg`,
  twitterCreator: '@angsanley',
}
---

<!doctype html>
<html lang="en">
  <head>
    <SEO
      title={seo.title}
      description={seo.description}
      openGraph={{
        basic: {
          title: seo.title,
          type: 'profile',
          image: seo.image,
        },
      }}
      twitter={{
        card: 'summary_large_image',
        creator: seo.twitterCreator,
        image: seo.image,
        title: seo.title,
        description: seo.description,
      }}
      extend={{
        link: [
          { rel: 'icon', href: '/favicon.ico' },
          { rel: 'sitemap', href: '/sitemap-index.xml' },
        ],
      }}
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <style is:global>
      :root {
        @apply bg-slate-50;
      }

      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        @apply font-display;
      }

      body {
        @apply max-w-2xl mx-auto;
      }
    </style>
  </body>
</html>
